# For more information on configuration, see:
#   * Official English Documentation: http://nginx.org/en/docs/
#   * Official Russian Documentation: http://nginx.org/ru/docs/

user nginx;
worker_processes  auto;
worker_rlimit_nofile 30000;

#error_log  /var/log/nginx/error.log debug;
error_log  /var/log/nginx/error.log crit;
#error_log  /var/log/nginx/error.log  notice;
#error_log  /var/log/nginx/error.log  info;

pid        /run/nginx.pid;

#why epoll
#https://lwn.net/Articles/520022/
#https://www.kernel.org/doc/ols/2004/ols2004v1-pages-215-226.pdf
#multi_accept
#http://nginx.org/en/docs/ngx_core_module.html#multi_accept
events {
    worker_connections  4096;
    multi_accept on;
    use epoll;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    #access_log  /var/log/nginx/access.log  main;
    access_log off;

    #
    # https://github.com/torvalds/linux/blob/89453379aaf0608253124057df6cd8ac63948135/net/ipv4/tcp.c#L2468
    # https://github.com/torvalds/linux/blob/89453379aaf0608253124057df6cd8ac63948135/net/ipv4/tcp_output.c#L1511
    sendfile       on;
    tcp_nopush     on;
    tcp_nodelay    on;

    #keepalive_timeout  0;
    #keepalive_timeout  65;

    #gzip  on;

    # very long server_name can overlap default bucket_size 64
    server_names_hash_bucket_size 128;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;

    index   index.html index.htm;

}

