---
kind: Pod
apiVersion: v1
metadata:
  name: kube-controller-manager
spec:
  hostNetwork: true
  containers:
  - name: kube-controller-manager
    image: "{{ hyperkube_image }}"
    command:
    - "/hyperkube"
    - controller-manager
    {% for opt in controller_manager_opts -%}
    - "{{ opt.flag }}{% if opt.value is defined %}={{ opt.value }}{% endif %}"
    {% endfor -%}
    livenessProbe:
      httpGet:
        scheme: HTTP
        host: 127.0.0.1
        port: {{ controller_manager_port }}
        path: "/healthz"
      initialDelaySeconds: 15
      timeoutSeconds: 15
    volumeMounts:
    - name: kube-certs
      mountPath: "{{ kube_certs_dir }}"
      readOnly: true
    - name: srvkube
      mountPath: "{{ srv_kube_path }}"
      readOnly: true
  volumes:
  - name: kube-certs
    hostPath:
      path: "{{ kube_certs_dir }}"
  - name: srvkube
    hostPath:
      path: "{{ srv_kube_path }}"
  securityContext:
    seLinuxOptions:
      type: "spc_t"
      level: "s0"
