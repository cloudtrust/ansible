apiVersion: v1
kind: Service
metadata:
  annotations:
    service.alpha.kubernetes.io/tolerate-unready-endpoints: "true"
  name: keycloak-headless
spec:
  ports:
  - port: 8888
    protocol: TCP
    targetPort: http-bridge
    name: http-bridge
  - port: 5555
    protocol: TCP
    targetPort: grpc
    name: grpc
  - port: 80
    protocol: TCP
    targetPort: http
    name: http
  clusterIP: None
  selector:
    app: {{ base_name }}
